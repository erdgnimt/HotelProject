@model List<AppUserResultDTO>
@{
    ViewData["Title"] = "GetAppUserWithWorkLocationList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="active-member">
        <div class="table-responsive">
            <table class="table table-xs mb-0">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Çalıştığı Şube</th>
                        <th>Şehir</th>
                        <th>Ülke</th>                        
                        <th>Cinsiyet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                            <td>@item.WorkLocationName</td>
                            <td>@item.WorkLocationCity</td>
                            <td>@item.Country</td>
                            <td>@item.Gender</td>  
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydı</a>



